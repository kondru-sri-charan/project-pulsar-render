{
    "name": "Project Pulsar Environment",
    // Use a pre-built Microsoft image that includes Docker, Java, and Maven.
    "image": "mcr.microsoft.com/devcontainers/java:0-17-bullseye",
    
    // This is the key part. This command runs AFTER the container starts.
    // It will automatically start your entire application stack.
    "postCreateCommand": "docker-compose up --build -d",

    // Forward the API port so you can access it from your local browser.
    "forwardPorts": [8081],

    // Add features to the container.
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
        "ghcr.io/devcontainers/features/java:1": {
            "version": "17"
        },
        "ghcr.io/devcontainers/features/maven:1": {}
    }
}