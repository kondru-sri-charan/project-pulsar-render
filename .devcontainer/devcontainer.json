{
    "name": "Project Pulsar (Minimal)",

    // Use a base image that just has Java and basic tools. It's much smaller.
    "image": "mcr.microsoft.com/devcontainers/java:0-17",

    // We still need Docker-in-Docker to run docker-compose.
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {
            "version": "latest"
        }
    },

    // Run our docker-compose stack automatically after creation.
    "postCreateCommand": "docker-compose up --build -d",

    // Forward the API port.
    "forwardPorts": [8081]
}